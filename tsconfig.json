{
    "buildOptions": {
        "incremental": true
    },
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "target": "ES6",
        "lib": [
            "esnext",
            "DOM"
        ],
        // Optimizations
        "incremental": true,
        "skipLibCheck": true,
        // Resolution
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        // Declarations
        "declarationDir": "lib",
        "declaration": true,
        "declarationMap": true,
        // Source Maps
        "mapRoot": "lib",
        "sourceMap": true,
    }
}